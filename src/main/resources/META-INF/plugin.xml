<idea-plugin>
    <id>ca.ulaval.glo.sensei</id>
    <name>Sensei - Code Reviews</name>
    <vendor email="samuelcabralcruz@gmail.com" url="https://github.com/SamuelCabralCruz/sensei">Sensei</vendor>
    <version>0.0.4</version>

    <description><![CDATA[TODO - placeholder description to be modified later]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="ca.ulaval.glo.view.lineMarker.RunnableLineMarkerProvider"/>
        <projectService serviceImplementation="ca.ulaval.glo.persistence.ReviewPersistence"/>
    </extensions>

    <actions>
        <group id="sensei.actions" text="Sensei">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="ca.ulaval.glo.action.CreateReviewAction" id="sensei.actions.createReview"
                    text="Create Review">
            </action>
            <action class="ca.ulaval.glo.action.AddCommentAction" id="sensei.actions.addComment" text="Add Comment">
                <keyboard-shortcut first-keystroke="control shift F4" keymap="$default" replace-all="true"/>
            </action>
            <action class="ca.ulaval.glo.action.GenerateReportAction" id="sensei.actions.generateReport"
                    text="Generate Report">
                <keyboard-shortcut first-keystroke="control shift F5" keymap="$default" replace-all="true"/>
            </action>
            <action class="ca.ulaval.glo.action.CloseReviewAction" id="sensei.actions.closeReview"
                    text="Close Review">
            </action>
            <action class="ca.ulaval.glo.action.ReopenReviewAction" id="sensei.actions.reopenReview"
                    text="Reopen Review">
            </action>
            <action class="ca.ulaval.glo.action.DeleteReviewAction" id="sensei.actions.deleteReview"
                    text="Delete Review">
            </action>
        </group>
    </actions>
</idea-plugin>
